<h3>Donated items to <%= @delivery.receiver.name %><%= link_to image_tag("print.png"), delivery_print_ship_path(@delivery), :class => "image_link", :target => "_blank" %>
</h3>

<%= form_for @delivery do |f|  %>
<table>
  <thead>
    <tr>
      <td class="column_c">Category</td>
      <td class="column_q">Quantity</td>
    </tr>
  </thead>
  <tbody>
    <% for i in @delivery.items %>
      <tr>
        <td><%= i.category %></td>
        <td><%= i.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= f.hidden_field :status, :value => Delivery::SHIPPED %>
<br/>
<h3>Add comment if any</h3>
<%= text_area_tag :note, nil, :class => "form_text_area" %> 
<br/>
<br/>
<%= submit_tag "Ship items", :class => "button" %>
<% end %>

