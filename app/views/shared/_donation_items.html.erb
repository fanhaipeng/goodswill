<h3>Donated items</h3>
<br/>
<table> 
  <thead>
    <tr> 
      <td style="width: 150px">Category</td>
      <td style="width: 150px">Quantity</td>
      <td style="width: 150px">Unit</td>
    </tr>
  </thead>
  <tbody>
    <% for item in @donation.items %>
      <tr> 
        <td><%= h item.category %></td>
        <td><%= h item.quantity %></td>
        <td><%= h item.unit%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>
